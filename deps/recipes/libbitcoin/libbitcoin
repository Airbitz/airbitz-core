depends="boost curl openssl zlib"
inherit lib

source="https://github.com/swansontec/libbitcoin.git"

build() {
    echo Building...
    autoreconf -i
    ./configure --enable-static --disable-shared --host=$cross --prefix=$install_dir
    make
    make install
}

include="include/bitcoin/*"
lib="lib/libbitcoin.a"
