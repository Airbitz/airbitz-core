depends="boost curl openssl zlib"
inherit lib

source="http://libbitcoin.dyne.org/download/libbitcoin-2.0.tar.bz2"

build() {
    cd libbitcoin-2.0

    echo Patching...
    patch -p1 < $recipe_dir/0001-Fix-C-11-language-violations.patch

    echo Building...
    autoreconf -i
    ./configure --enable-static --disable-shared --host=$cross --prefix=$install_dir
    make
    make install
}

include="include/bitcoin/*"
lib="lib/libbitcoin.a"
