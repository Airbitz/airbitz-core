inherit lib

source="http://download.dnscrypt.org/libsodium/releases/libsodium-0.5.0.tar.gz"

build() {
    cd libsodium-0.5.0
    ./autogen.sh
    ./configure --enable-static --disable-shared --host=$cross --prefix=$install_dir
    make
    make install
}

include="include/sodium.h include/sodium/*"
lib="lib/libsodium.a"
