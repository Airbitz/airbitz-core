depends="libbitcoin"
inherit lib

source="http://libbitcoin.dyne.org/download/libwallet-0.4.tar.bz2"

build() {
    cd libwallet-0.4
    autoreconf -i
    ./configure --enable-static --disable-shared --host=$cross --prefix=$install_dir
    make
    make install
}

include="include/wallet/*"
lib="lib/libwallet.a"
