depends="curl jansson libbitcoin libqrencode libwallet openssl scrypt"
inherit lib

build() {
    cd $base_dir/..
    export TARGET=$target
    CFLAGS="$CFLAGS -D_GNU_SOURCE"
    make
    mkdir -p $install_dir/lib
    cp build/$target/libabc.a $install_dir/lib
    cp src/ABC.h $install_dir/include
}

clean() {
    rm -rf $work_dir
    cd $base_dir/..
    make clean
}

lib="lib/libabc.a"
include="include/ABC.h"
