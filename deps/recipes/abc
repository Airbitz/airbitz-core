depends="curl jansson libbitcoin libbitcoin-client libqrencode libwallet openssl scrypt"
inherit lib

build() {
    cd $base_dir/..

    case $target in
    ios-*)  output=libabc.a ;;
    *)      output=libabc.so ;;
    esac

    # Build:
    export TARGET=$target
    make $output

    # Install:
    mkdir -p $install_dir/lib
    cp build/$target/$output $install_dir/lib
    cp src/ABC.h $install_dir/include
}

clean() {
    rm -rf $work_dir
    cd $base_dir/..
    make clean
}

lib="lib/libabc.a"
include="include/ABC.h"
