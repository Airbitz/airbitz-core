depends="curl jansson libbitcoin libqrencode libwallet openssl scrypt"
inherit lib

build() {
    cd $base_dir/..
    export TARGET=$target
    CFLAGS="$CFLAGS -D_XOPEN_SOURCE=500"
    make
    mkdir -p $install_dir/lib
    cp build/$target/libabc.a $install_dir/lib
}

clean() {
    rm -rf $work_dir
    cd $base_dir/..
    make clean
}

lib="lib/libabc.a"
