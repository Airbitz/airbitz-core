depends="curl jansson libbitcoin-client libcsv libgit2 libqrencode openssl protobuf"
inherit lib

build() {
    cd $base_dir/..
    export WORK_DIR=$work_dir

    case $target in
    android-*)  output=libabc.so ;;
    *)          output=libabc.a ;;
    esac

    if [ -n ${DEBUG+x} ]; then
        export CFLAGS="$CFLAGS -O0"
        export CXXFLAGS="$CXXFLAGS -O0"
    fi

    # Build:
    make $output V=1

    # Run unit tests:
    if [ $target = native ]; then
        make check
    fi

    # Install:
    mkdir -p $install_dir/lib
    cp $work_dir/$output $install_dir/lib
    cp src/ABC.h $install_dir/include
}

clean() {
    cd $base_dir/..
    export WORK_DIR=$work_dir
    make clean
}

lib="lib/libabc.a"
include="include/ABC.h"
