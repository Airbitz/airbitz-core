depends="curl jansson libbitcoin libbitcoin-watcher libqrencode libwallet openssl scrypt"
inherit lib

build() {
    cd $base_dir/..

    case $target in
    ios-*)  output=libabc.a ;;
    *)      output=libabc.so ;;
    esac

    # Build:
    export WORK_DIR=$work_dir
    make $output

    # Install:
    mkdir -p $install_dir/lib
    cp $work_dir/$output $install_dir/lib
    cp src/ABC.h $install_dir/include
}

lib="lib/libabc.a"
include="include/ABC.h"
