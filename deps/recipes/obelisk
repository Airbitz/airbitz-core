depends="libbitcoin libconfig zeromq"
inherit lib

source="https://github.com/Airbitz/obelisk.git"

build() {
    autoreconf -i
    ./configure --enable-static --disable-shared --host=$cross --prefix=$install_dir
    ( cd src; make install-libLTLIBRARIES )
    ( cd include/obelisk; make install )
    mkdir -p $install_dir/lib/pkgconfig
    cp libobelisk.pc $install_dir/lib/pkgconfig
}

include="include/obelisk/* include/obelisk/client/*"
lib="lib/libobelisk.a"
